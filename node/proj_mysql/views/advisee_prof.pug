extends layout

block content
    link(href='/css/extends/starter-template.css', rel='stylesheet')
    body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .row
        .col-sm-6
          .col-sm-1
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index') Database-Project
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Site
              li
                a(href='about') About
        .col-sm-5
        .col-sm-1
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='#') #{user_val}
    .container
      br
      br
      .row
        .col-sm-2
          nav.navbar.navbar-default.sidebar(role='navigation')
            .container-fluid
              ul.nav.navbar-nav
                li
                  a(href='index_prof')
                    | Home &nbsp; 
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-home(style='font-size:16px;')
                li
                  a(href='profile_prof')
                    | Profile &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-user(style='font-size:16px;')
                li
                  a(href='course_prof')
                    | Courses &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-pencil(style='font-size:16px;')
                li
                  a(href='#')
                    font(class="text-primary") | Advisees &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-bullhorn(style='font-size:16px;' class="text-primary")
                li
                  a(href='project_prof')
                    | Projects &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-file(style='font-size:16px;')
                li      
                  a(href='report_prof')
                    | Report &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-stats(style='font-size:16px;')
                li
                  a(href='search_info_prof')
                    | Search &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px;')
                li
                  a(href='/logout')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            h1 Advisees List
            br
            br
            | Advisees which is in your responsible is listing here.
            br
            br
            br
            table.table.table
              thead
                tr
                  th #
                  th Student ID
                  th Gender
                  th Student Name
                  th Email
                  th Telephone
                  th &nbsp; Probation
                  th &nbsp; Abroad
                  th &nbsp; Leave
              tbody
                each result,index in results
                  tr
                    td= index+1
                    td= result.sid
                    td(align='center')= result.gender
                    td= result.fname+' '+result.sname
                    td= result.email
                    td= result.tel 
                    td(align='center')= result.probation
                    td(align='center')= result.studyabroad
                    td(align='center')= result.leaving
        
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src="js/bootstrap.min.js")
