extends layout

block content
    link(href='/css/extends/profile.css', rel='stylesheet')
    body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .row
        .col-sm-6
          .col-sm-1
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index') Database-Project
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Site
              li
                a(href='about') About
        .col-sm-5
        .col-sm-1
            .collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='#') #{user_val}
    .container
      br
      br
      .row
        .col-sm-2
          nav.navbar.navbar-default.sidebar(role='navigation')
            .container-fluid
              ul.nav.navbar-nav
                li
                  a(href='index_prof')
                    | Home &nbsp; 
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-home(style='font-size:16px;')
                li
                  a(href='#')
                    font(class="text-primary") | Profile &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-user(style='font-size:16px;' class="text-primary")
                li
                  a(href='course_prof')
                    | Courses &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-pencil(style='font-size:16px;')
                li
                  a(href='advisee_prof')
                    | Advisees &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-bullhorn(style='font-size:16px;')
                li
                  a(href='project_prof')
                    | Projects &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-file(style='font-size:16px;')
                li      
                  a(href='report_prof')
                    | Report &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-stats(style='font-size:16px;')
                li
                  a(href='search_info_prof')
                    | Search &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px;')
                li
                  a(href='/logout')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            h1 Profile Manager &nbsp; &nbsp;
            br
            img.responsive-img(src="images/brown.png" align="right" style='max-height:150px;' alt="face")
            br
            | All we know about you.
            br
            br
            br
            br
            each result in results
              .row
                .col-lg-2
                  h4 Abbreviation
                  input.form-control(type="text" value=result.pab disabled)
                .col-lg-3
                  h4 Citizen ID
                  input.form-control(type="text" value=result.ssn disabled)
                .col-lg-2
                  h4 Since
                  input.form-control(type="text" value=result.since disabled)
                .col-lg-2
                  h4 Advanced                    
                  input.form-control(type="text" value=result.advanced disabled)
              br
              .row
                .col-lg-3
                  h4 First Name
                  input.form-control(type="text" value=result.fname disabled)
                .col-lg-3
                  h4 Last name  
                  input.form-control(type="text" value=result.sname disabled)
                .col-lg-1
                  h4 Gender
                  input.form-control(type="text" value=result.gender disabled)
                .col-lg-2
                  h4 Birth Date
                  input.form-control(type="date" value=result.bdate2 disabled)
              br
              .row
                .col-lg-9
                  h4 Address
                  input.form-control(type="text" value=result.houseno + ' ' + result.road + ', ' + result.subdistrict + ', ' + result.district + ', ' + result.province + ' ' + result.pcode disabled)
              br
              .row
                .col-lg-3
                  h4 Email Address
                  input.form-control(type="text" value=result.email disabled)
                .col-lg-3
                  h4 Phone No.
                  input.form-control(type="text" value=result.tel disabled)
                
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
      script(src="js/bootstrap.min.js")
      script(src="js/profile_prof.js")
